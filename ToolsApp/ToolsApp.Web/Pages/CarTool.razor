@page "/car-tool"

<header>
  <h3>Car Tool</h3>
</header>

<table>
  <thead>
    <tr>
      <td>Id</td>
      <td>Make</td>
      <td>Model</td>
      <td>Year</td>
      <td>Color</td>
      <td>Price</td>
    </tr>
  </thead>
  <tbody>
    @foreach(var car in Cars) {
      <tr>
        <td>@car.Id</td>
        <td>@car.Make</td>
        <td>@car.Model</td>
        <td>@car.Year</td>
        <td>@car.Color</td>
        <td>@car.Price</td>
      </tr>
    }
  </tbody>
</table>

@code {

  public IEnumerable<ICar> Cars { get; set; } = new List<ICar>() {
    new Car() { Id = 1, Make = "Ford", Model = "Fusion Hybrid", Year = 2020, Color = "red", Price = 45000 }
  };

}
